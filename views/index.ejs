<% include partials/header %>
<% if (posts.length === 0) { %>
<img src="" alt="blank">
<% } %>
<main id="main" class="container">
  <% posts.forEach(post => { %>
  <div class="card mb-5" style="max-width: 800px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= post.image %>" class="card-img">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><a href="/" class="text-dark"><%= post.title %></a></h5>
          <p class="card-text"><%= post.body.substring(0, 100) %></p>
          <p class="card-text"><small class="text-muted"><%= post.postedDate.toDateString() %></small></p>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</main>
<% include partials/footer %>