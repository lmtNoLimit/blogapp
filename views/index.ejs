<% include partials/header %>
<% if (posts.length === 0) { %>
<img src="/images/blank.jpg" alt="blank">
<% } else { %>
<main id="main" class="container">
  <div class="row">
    <% posts.forEach(post => { %>      
      <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
        <div class="card mb-4">
          <img src="<%= post.image %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><a class="text-dark" href="/post/<%= post._id %>"><%= post.title %></a></h5>
            <p class="card-text"><%= post.body.substring(0, 100) %></p>
            <p class="card-text"><small class="text-muted"><%= post.postedDate.toDateString() %> by
                <%= post.author.name %></small></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</main>
<% } %>
<% include partials/footer %>