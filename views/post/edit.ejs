<% include ../partials/header %>
<div id="main" class="container">
  <h2 class="mb-4">Edit post</h2>
  <form method="POST" id="form">
    <div class="form-group">
      <input type="text" name="title" class="form-control" id="title" placeholder="Title" value="<%= post.title %>">
    </div>
    <div class="form-group">
      <input type="text" name="image" class="form-control" id="image" placeholder="Image url" value="<%= post.image %>">
    </div>
    <div class="form-group">
      <textarea class="form-control" name="body" id="body" rows="5"
        placeholder="Write something..."><%= post.body %></textarea>
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-info" value="Modify" />
    </div>
  </form>
</div>
<% include ../partials/footer %>